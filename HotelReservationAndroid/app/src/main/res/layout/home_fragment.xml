<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:id="@+id/linear_layout_welcome"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="20dp"
        android:background="@drawable/home_rounded_corner"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textSize="25dp"
            android:text="Welcome Aboard !"
            android:textColor="@color/white"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:text="We will help you find the best hotels in the city \n Enjoy the Experience"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/popular_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/linear_layout_welcome"
        android:layout_marginTop="20dp"
        android:text="Popular Hotels"
        android:textSize="20sp"
        android:textColor="@color/red"
        android:gravity="center"
        android:textStyle="bold"
        />


    <ImageView
        android:id="@+id/image_popular"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/hotel_img"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/popular_text_view"
        />

    <TextView
        android:id="@+id/hotel_name_popular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/image_popular"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Mariott"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/availability_popular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@+id/hotel_name_popular"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Available"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/price_popular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_popular"
        android:text="$100"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/price_popular"
        android:text="10% discount"
        android:textSize="12sp"
        android:textColor="@color/red"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/home_rounded_corner"
            android:textColorHint="@color/white"
            android:hint="SEARCH FOR HOTELS"
            />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>